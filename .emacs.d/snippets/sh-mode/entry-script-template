# -*- mode: snippet -*-
# name: entry-script-template
# key: main
# --
function helpmsg() {
    echo "Usage: ${BASH_SOURCE[0]:-$0} [--debug | -d] [--help | -h]"
}

function main() {
    local param=""
    while [ $# -gt 0 ]; do
        case \${1} in
            --debug | -d)
                set -uex
                ;;
            --help | -h)
                helpmsg
                exit 0
                ;;
            --param | -p)
                param=\${2}
                shift
                ;;
            *)
                helpmsg
                exit 1
                ;;
        esac
        shift
    done

    # ---- do something
}

main "$@"